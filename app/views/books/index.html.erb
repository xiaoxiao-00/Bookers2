<% if @book.errors.any? %>
  <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="container">
  <div class="row">
  <div class="col-lg-4">
  <%= render 'list', user: @user, book: @book %>
  </div>

<div class="col-lg-8">
<h1>Books</h1>
<% @books.each do |book| %>
<table class="table table-striped">
  <thead>
    <th>Image</th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(book.user.id) do %>
        <%= image_tag book.user.get_profile_image(100,100) %></td>
        <% end %>
      <td>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
<% end %>
</tr>
</tbody>
</table>
</div>
</div>
</div>