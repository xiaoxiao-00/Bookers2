<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="bg-dark text-white">
    <nav class="navbar">
    <a class="navbar-brand text-white p-3" href="/">Bookers</a>
    <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to user_path(current_user.id), class: 'nav-link text-white' do %>
        <i class="fas fa-home"></i>
        <span>Home</span>
        <% end %>
      </li>
       <li class="nav-item">
        <%= link_to users_path, class: 'nav-link text-white' do %>
        <i class="fas fa-users"></i>
        <span>Users</span>
        <% end %>
      </li>
       <li class="nav-item">
        <%= link_to books_path, class: 'nav-link text-white' do %>
        <i class="fas fa-book-open"></i>
        <span>Books</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-white' do %>
        <i class="fas fa-sign-out-alt"></i>
        <span>Log out</span>
        <% end %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to root_path, class: 'nav-link text-white' do %>
        <i class="fas fa-home"></i>
        <span>Home</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to about_path, class: 'nav-link text-white' do %>
        <i class="fas fa-link"></i>
        <span>About</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to new_user_registration_path, class: 'nav-link text-white' do %>
        <i class="fas fa-user-plus"></i>
        <span>Sign up</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to new_user_session_path, class: 'nav-link text-white' do %>
        <i class="fas fa-sign-in-alt"></i>
        <span>Log in</span>
        <% end %>
      </li>
    <% end %>
    </nav>
    </ul>
  </header>
  <body>
    <% flash.each do |message_type, message| %>
     <%= content_tag(:div, message, class: message_type) %>
    <% end %>
  </body>
    <%= yield %>
  <footer>
    <div class="container mt-5">
     <div class="row">
      <div class="mx-auto">
       <p>CopyRight Infratop.inc</p>
      </div>
     </div>
    </div>
  </footer>
</html>
