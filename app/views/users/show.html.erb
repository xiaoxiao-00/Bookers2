<div class="container">
  <div class="row">
   <div class="col-lg-4">
   <%= render 'books/list', user: @user, book: @book %>
   </div>
<div class="col-lg-8">
<h1>Books</h1>
<table class="table table-striped">
  
  <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
  </thead>
<tbody>
    <% @books.each do |book| %>
    <tr>
  <td><%= image_tag book.user.get_profile_image(100,100) %></td>
  <td><%= book.title %></td>
  <td><%= book.body %></td>

<% end %>
</tr>
</tbody>
</table>
</div>
</div>
</div>

